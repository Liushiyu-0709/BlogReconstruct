<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sherry.mapper.NoticeMapper">
    <select id="selectAllNotices" resultType="Notice">
        select * from notice;
    </select>
    <select id="selectNoticeByLimit" resultType="Notice">
        select * from notice
        order by notice_create_time desc
        limit #{limit};
    </select>
    <select id="selectNoticeById" resultType="Notice">
        select * from notice
        where notice_id=#{noticeId};
    </select>
    <insert id="insertNotice" useGeneratedKeys="true" keyProperty="noticeId">
        insert into notice
        (notice_id,notice_title,notice_content,notice_create_time)
        values
        (#{noticeId},#{noticeTitle},#{noticeContent},#{noticeCreateTime});
    </insert>
    <update id="updateNotice" parameterType="Notice">
        update notice
        <set>
            <if test="noticeId != null">notice_id = #{noticeId},</if>
            <if test="noticeTitle != null">notice_title = #{noticeTitle},</if>
            <if test="noticeContent != null">notice_content = #{noticeContent},</if>
            <if test="noticeCreateTime != null">notice_create_time = #{noticeCreateTime},</if>
        </set>
        where notice_id = #{noticeId,jdbcType=INTEGER}
    </update>
</mapper>